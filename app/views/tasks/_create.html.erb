<%= form_for([@project, Task.new], remote: true, :html => {id:"task_create_form"}) do |f| %>
  <div class="form-group">
    <%= f.text_area :title, class: "form-control", id: "task_title_field", remote: true %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>